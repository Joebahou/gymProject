<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRscanner.InfoUsage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            <BoxView HeightRequest="10"/>

            <Frame BackgroundColor="#BF043055" HasShadow="False">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Entry x:Name="Weight" Text="{Binding Weight}" Placeholder="Weight"   
                           PlaceholderColor="White" HeightRequest="40"     
                           TextColor="White"/>
                    <Entry x:Name="Speed" Text="{Binding Speed}" Placeholder="Speed"   
                           PlaceholderColor="White" HeightRequest="40"   
                           TextColor="White"/>
                    <Entry x:Name="Reps" Text="{Binding Reps}" Placeholder="Reps"   
                           PlaceholderColor="White" HeightRequest="40"   
                           TextColor="White"/>
                    <Entry x:Name="Sets" Text="{Binding Sets}" Placeholder="Sets"   
                           PlaceholderColor="White" HeightRequest="40"   
                           TextColor="White"/>
                </StackLayout>
            </Frame>
            <Button Command="{Binding SubmitCommand}" Text="Submit" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#088da5" />
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>