<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exampleApp.StatisticsNavigationTrainee">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Select The Statistics You Are Interested In"
                   Margin="50,20"
                   TextColor="Black"
                   FontSize="Large"></Label>
            <Button x:Name="MachinesStats"
                    Text="Check Detailed Statistics Per Machine"
                    Margin="10,10"
                    Clicked="MachinesStats_Clicked"></Button>
            <Button x:Name="MachinesProgress"
                    Text="Show Progress Per Machine"
                    Margin="10,10"
                    Clicked="MachinesProgress_Clicked"></Button>
            <Button x:Name="GlobalProgress"
                    Text="Show Global Progress regarding age and gender"
                    Margin="10,10"
                    Clicked="GlobalProgress_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>