<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exampleApp.Pages.QrImage"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             xmlns:zxincommon="clr-namespace:ZXing.Common;assembly=zxing.portable">
    <ContentPage.Content>
        <StackLayout>
            <zxing:ZXingBarcodeImageView x:Name="barcode"  WidthRequest="400" HeightRequest="400" IsVisible="true">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxincommon:EncodingOptions Width="400" Height="400"></zxincommon:EncodingOptions>
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>