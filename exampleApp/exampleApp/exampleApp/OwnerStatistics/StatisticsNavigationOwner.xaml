<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exampleApp.OwnerStatistics.StatisticsNavigationOwner">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Select The Statistics You Are Interested In"
                   Margin="50,20"
                   TextColor="Black"
                   FontSize="Large"></Label>
            <Button x:Name="MachinesStats"
                    Text="Show Machines Popularity"
                    Margin="10,10"
                    Clicked="MachinesStats_Clicked"></Button>
            <Button x:Name="HoursStats"
                    Text="Show Hours Popularity"
                    Margin="10,10"
                    Clicked="HoursStats_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>